{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Normativa</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Titolo</th>
                <td>{{ entity.titolo }}</td>
            </tr>
            <tr>
                <th>Oggetto</th>
                <td>{{ entity.oggetto }}</td>
            </tr>
            <tr>
                <th>Datanormativa</th>
                <td>{{ entity.dataNormativa|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Gazzettaufficiale</th>
                <td>{{ entity.gazzettaUfficiale }}</td>
            </tr>
            <tr>
                <th>Contenuto</th>
                <td>{{ entity.contenuto }}</td>
            </tr>
            <tr>
                <th>Datainserimento</th>
                <td>{{ entity.dataInserimento|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('normativa') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('normativa_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
