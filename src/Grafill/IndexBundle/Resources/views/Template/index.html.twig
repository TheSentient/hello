<!DOCTYPE html>
<html lang="en">
  <head>
    {% block head %}
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      {% block meta_description %}
    	  <meta name="description" content="">
      {% endblock %}
      
      {% block title %}<title>Lavori Pubblici | Informazione tecnica online</title>{% endblock %}
      <link rel="shortcut icon" href="/favicon.ico">
      
      {% block css_vendors %}
        <link href="/vendors/bootstrap-3.3.1-dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="/vendors/font-awesome-4.2.0/css/font-awesome.min.css" rel="stylesheet">
      {% endblock css_vendors %}

      {% block css_main %}
        {% stylesheets filter='compass' debug=false 'bundles/llppindex/css/main.sass' %}
          <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
      {% endblock css_main %}

      {% block css_local %}
      {% endblock css_local %}
    
      {% block js_vendors %}
        <script src="/vendors/jquery-2.1.3.min.js"></script>
        <script src="/vendors/bootstrap-3.3.1-dist/js/bootstrap.min.js"></script>
        <script src="/vendors/angular-1.3.10/angular.min.js"></script>
      {% endblock js_vendors %}
      {% block js_iesupports %}
        <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="../../assets/js/html5shiv.js"></script>
          <script src="../../assets/js/respond.min.js"></script>
        <![endif]-->
      {% endblock js_iesupports %}
    {% endblock head %}
  </head>
  <body ng-app="LLPP">
    <div class="loading active" load-spy>
      <i class='fa fa-spinner fa-pulse fa-4x'></i>
    </div>
    {% block page_body %}
      <div id="main-nav" class="container-fluid">
        {% block main_header %}
          {{ include('LLPPIndexBundle:Home:header.html.twig') }}
        {% endblock %}
      </div>
      <div id="main-content" class="container">
      {% block main_content %}
        {% block page_header %}
          {{ include('LLPPIndexBundle:Home:page-header.html.twig') }}
        {% endblock %}

        <div id="page-content" style="height: 1000px;">
           {% block page_content %}
           {% endblock %}
        </div>
      {% endblock main_content %}
      </div>
    {% endblock page_body %}
    <modal></modal>
    <script src="/app/llpp.js"></script>
  </body>
</html>